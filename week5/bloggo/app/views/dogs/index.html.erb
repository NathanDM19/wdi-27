<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<%= form_tag dog_search_path, method: :get do %>

  <%= text_field_tag :query, nil, placeholder: 'Enter search keywords' %>

  <%= submit_tag "Search" %>

<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Roundness</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.roundness %></td>
        <td><%= dog.bio %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path %>
